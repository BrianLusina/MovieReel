<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".views.MainActivity">

    <!--Toolbar-->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_main_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/indigo_600"
        android:minHeight="?attr/actionBarSize"
        android:elevation="4dp"
        local:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        local:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        local:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        local:layout_constraintLeft_toLeftOf="parent"
        local:layout_constraintTop_toTopOf="parent"/>

    <!-- the layout which will contain (host) the fragments-->
    <FrameLayout
        android:id="@+id/drawer_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        local:layout_constraintBottom_toBottomOf="parent"
        local:layout_constraintRight_toRightOf="parent"
        local:layout_constraintTop_toBottomOf="@+id/toolbar_main_id"
        tools:layout_constraintLeft_creator="1"
        local:layout_constraintLeft_toLeftOf="parent">

        <!-- the layout which will be the content of the activity (which will be hosted inside the drawer (NOT the list of the drawer)) -->
        <FrameLayout
            android:id="@+id/frame_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>
</android.support.constraint.ConstraintLayout>